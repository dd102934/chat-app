<div class="ui massive celled list">
  <% @users.each do |user| %>
  <div class="item">
    <i class="big inverted green smile outline icon"></i>
    <div class="content">
      <div class="header">
        <%= link_to user.username, user_path(user) %>
      </div>
       <%= pluralize(user.messages.count, "message") %>
    </div>
  </div>
  <% end %>
</div>
<%= will_paginate %>

